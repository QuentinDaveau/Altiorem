code = "shader_type canvas_item;

uniform vec4 shadow_color: hint_color;

void fragment()
{
	vec4 c = texture(SCREEN_TEXTURE, SCREEN_UV);
	
	if (c.r >= 0.29 && c.r <= 0.3)
	{
		vec4 sc = texture(SCREEN_TEXTURE, SCREEN_UV - vec2(10.0 * SCREEN_PIXEL_SIZE.x, -10.0 * SCREEN_PIXEL_SIZE.y));
		
		if (sc.r <= 0.29 || sc.r >= 0.3)
		{
			COLOR = shadow_color;
		}
		else
		{
			COLOR = c;
		}
	}
	else
	{
		COLOR = c;
	}
}"

